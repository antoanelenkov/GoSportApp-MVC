@using GoSport.Client.ViewModels.Users
@using Microsoft.AspNet.Identity;
@model UserProfileViewModel
@{
    ViewBag.Title = "Your Profile";
}
<h1>@ViewBag.Title, @Model.Name</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            @if(Model.AvatarUrl.Length!=0)
            {
                <img src="@String.Format("/Content/Avatars/{0}.jpg",this.User.Identity.GetUserName())" alt="avatar" height=300 width=300 class="img-rounded" />
            }
            else
            {
                <img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRQYvnZBfeVGEm4cbMDXLlr-xOat9DQungOjV8sUGPcHgE1u3BE" alt="avatar" height=200 width=200 class="img-rounded" />
            }

        </div>
        <div class="col-md-8 control-label lead">
            <div class="col-md-3">Username:</div>
            <div class="col-md-3">@Model.Name</div>
        </div>
        <div class="col-md-8 control-label lead">
            <div class="col-md-3">City :</div>
            <div class="col-md-3">@Model.City</div>
        </div>
        <div class="col-md-8 control-label lead">
            <div class="col-md-3">Neighbour:</div>
            <div class="col-md-3">@Model.Neighborhood</div>
        </div>
        <div class="col-md-8 control-label lead">
            <div class="col-md-3">Description :</div>
            <div class="col-md-3">@Model.AboutMe</div>
        </div>
    </div>
