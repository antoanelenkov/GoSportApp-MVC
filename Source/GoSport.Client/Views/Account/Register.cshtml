@model GoSport.Client.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name *", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" , @value = "dasdsadsa"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UplodadedImage, new { @class = "col-md-2 control-label" })
        @*<div class="col-md-10 upload">
            @Html.TextBoxFor(m => m.UplodadedImage, new { @class = "form-control", @type = "file" })
        </div>*@
        <div class="col-md-5 upload">
            <input type="file" name="UplodadedImage" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, "Username *", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @value = "ddasdasd" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Email *", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" ,@value = "dasdsadsa@adfsf.bg" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Password *", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @value = "qwerty" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, "Confirm password *", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" , @value = "qwerty" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Facebook, "Facebook", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Facebook, new { @class = "form-control", @value = "dasdsadsa" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.City, new SelectList(ViewBag.Cities, "Id", "City"), "None", new { @class = "form-control", id = "city-drop-down" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Neighborhood, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Neighborhood, new SelectList(new string[] { }), "None", new { @class = "form-control", id = "neighbour-drop-down" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AboutMe, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.AboutMe, new { @class = "form-control", @rows = 5 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FavourtieSports, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @(Html.Kendo().AutoComplete()
          .Name("FavourtieSports")
          .Filter("startswith")
          .Placeholder("Type your favourite sports...")
          .BindTo(ViewBag.Categories)
          .Separator(", ")
            )
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
